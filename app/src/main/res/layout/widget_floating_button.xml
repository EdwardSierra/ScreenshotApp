<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/overlay_controls_background"
    android:padding="8dp">

    <ImageView
        android:id="@+id/captureButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/start_overlay"
        android:padding="8dp"
        android:src="@drawable/ic_overlay_button" />

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/close_overlay"
        android:padding="8dp"
        android:src="@drawable/ic_close_overlay" />
</LinearLayout>
